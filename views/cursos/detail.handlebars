<div class="card-parciais item-page">
  <img src="/img/products/{{curso.imagem}}" class="img-detail" alt="{{curso.nome}}">
  <div class="card-body">
    <h5 class="card-title">{{curso.nome}}</h5>
    <p>Pedido: {{curso.resumo}}</p>
    <p>Descrição: {{curso.descricao}}</p>
    <div class="buttons-detail">
      <a href="/cursos" class="btn btn-primary voltar">Voltar</a>
      <form action="/cursos/remove/{{curso._id}}" method="POST">
        <input type="submit" class="button btn btn-primary excluir" value="Excluir">
      </form>
    </div>
   
  </div>
</div>
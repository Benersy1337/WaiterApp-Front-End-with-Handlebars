<div class="container-cadastro">
  <div class="board-orders">
    <a href="/orders/create" class="button btn btn-success">Novo Pedido</a>
    <br />
    <a name="orders"></a>
    <div class="row justify-content-center">
      {{#each orders}}
        <div class="board-pedidos">
          <div class="item-page">
            <img
              class="img-pedido"
              src="../img/products/{{this.imagem}}"
              class="card-img-top"
              alt="..."
            />
            <div class="card-body">
              <h5 class="card-title">Mesa {{this.mesa}}</h5>
              <p class="card-text">Pedido {{this.pedido}}</p>
              <div class="actions">
                <a href="/orders/{{this._id}}" class="button-modal">Detalhes</a>
                <a
                  href="/orders/edit/{{this._id}}"
                  class="button-modal"
                >Editar</a>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
</div>

